<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA"

    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivTitulo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#FCFFFF"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="378dp"
        android:layout_height="52dp"
        android:fontFamily="@font/amatic_bold"
        android:gravity="center"
        android:text=" Servicios Odontológico"
        android:textColor="#152E73"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="282dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAdulto"
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAdultos"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FAFBFB"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="TRATAMIENTOS PARA ADULTOS"
                    android:textColor="#0A0B0B" />

                <ImageView
                    android:id="@+id/ivAdulto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#CDE9ED"
                    app:srcCompat="@drawable/icadulto" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNinos"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvNinos"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FAFBFB"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="TRATAMIENTOS PARA NIÑOS"
                    android:textColor="#070707"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivNinos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#CDE9ED"
                        app:srcCompat="@drawable/icninos" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="207dp"
        android:layout_height="282dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEstetico"
            android:layout_width="170dp"
            android:layout_height="182dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvestetico"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="#FAFBFB"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="TRATAMIENTOS ESTETICOS"
                    android:textColor="#0A0B0B" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ivEstetico"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#CDE9ED"
                        app:srcCompat="@drawable/icestetica" />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
